<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/info_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/info_name"
            android:layout_width="200dp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:hint="@string/info_name"
            android:layout_gravity="bottom"
            android:text=""  />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/info_sex"
            android:orientation="horizontal"
            android:layout_gravity="bottom">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_male"
                android:id="@+id/info_male"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_female"
                android:id="@+id/info_female"/>
        </RadioGroup>
    </LinearLayout>

    <EditText
        android:id="@+id/info_defaultLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="@string/info_defaultLocation"
        android:text=""  />

    <EditText
        android:id="@+id/info_telephone"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="@string/info_telephone"
        android:text=""  />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/info_pay"
            android:layout_width="172dp"
            android:layout_height="168dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/info_choosePayCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_code"
                android:textColor="#fff" />
            <Button
                android:id="@+id/info_change_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_submit"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>